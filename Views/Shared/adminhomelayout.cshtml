<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.1/css/all.min.css">
    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
            background-image: url('../images/ppp.jpg'); 
            background-size: cover;
            background-position: center;
            margin: 0;
            padding: 0;
        }

        
        .navbbar {
            width: 100%;
            background-color: rgba(0, 0, 0, 0.8); 
            overflow: auto;
            backdrop-filter: blur(10px);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1000;
            padding: 10px 0;
            height: 60px;
        }

            .navbbar a {
                float: left;
                padding: 10px 15px;
                color: white;
                text-decoration: none;
                font-size: 15px;
                font-weight: bold;
                text-transform: uppercase;
                transition: background-color 0.3s ease;
            }

                .navbbar a:hover {
                    background-color: #ff6600;
                    color: white;
                }

            .navbbar img.logo {
                padding: 0;
                margin: 0 15px;
                float: left;
            }

        .content {
            margin: 100px auto; 
            width: 90%;
            max-width: 1200px;
            background-color: rgba(255, 255, 255, 0.9);
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }

        footer {
            background-color: rgba(0, 0, 0, 0.9);
            color: white;
            padding: 20px 0;
            text-align: center;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.6);
            margin-top: 40px;
        }

            footer a {
                color: white;
                text-decoration: none;
                font-size: 16px;
                margin: 0 10px;
                transition: color 0.3s ease;
            }

                footer a:hover {
                    color: #ff6600;
                }
    </style>
</head>

<body>

    <header>
        <div class="navbbar">
            <img src="/images/AAMAM.png" width="40px" height="40px" class="logo">
            <a asp-area="" asp-controller="userall" asp-action="adminHome">CAR Store</a>
            <a asp-area="" asp-controller="userall" asp-action="adminHome">Admin Home</a>
            <a asp-area="" asp-controller="items" asp-action="index">Items Management</a>
            <a asp-area="" asp-controller="items" asp-action="itemslist">Items List</a>
            <a asp-area="" asp-controller="userall" asp-action="email">Send Email</a>
            <a asp-area="" asp-controller="userall" asp-action="searchall">User Search</a>
            <a asp-area="" asp-controller="orders" asp-action="purchase_report">Report Page</a>
            <a asp-area="" asp-controller="userall" asp-action="addadmin">Add Admin</a>
            <a asp-area="" asp-controller="userall" asp-action="index">User Management</a>
            <a asp-area="" asp-controller="items" asp-action="Dashboard">Dashboard</a>
            <a asp-area="" asp-controller="userall" asp-action="logout">Logout</a>
        </div>
    </header>

    <!-- Main Content -->
    <div class="content">
        @RenderBody()
    </div>


    <footer>
        <div>
            <p>Contact Us: <i class="fas fa-envelope"></i> admin@example.com | <i class="fas fa-phone"></i> +123 456 7890</p>
            <div>
                <a href="#">Privacy Policy</a> | <a href="#">Terms of Use</a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>

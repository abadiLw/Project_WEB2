
@{
    Layout = null;
}
@{
    Layout = "~/Views/Shared/adminhomelayout.cshtml";
}
<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>email</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        .form-registration {
            max-width: 600px;
            margin: 20px auto;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
        }

        .form {
            padding: 15px;
        }

        .txt-title {
            text-align: center;
        }

            .txt-title h1 {
                font-size: 24px;
                margin-bottom: 10px;
            }

        hr {
            border: 1px solid #ccc;
            margin-bottom: 20px;
        }

        .txt-field {
            margin-bottom: 15px;
        }

        label {
            font-weight: bold;
        }

        input[type="text"],
        textarea {
            width: 100%;
            padding: 8px;
            border-radius: 5px;
            border: 1px solid #ccc;
            box-sizing: border-box;
            margin-top: 5px;
        }

        .error {
            color: red;
            margin-bottom: 15px;
        }

        .btn-group {
            text-align: center;
        }

        .btn {
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            color: #fff;
            background-color: #dc3545;
            font-size: 16px;
        }

            .btn:hover {
                background-color: #c82333;
            }
    </style>
</head>

<body>

    <div class="form-registration">
        <div class="form" style="padding: 15px">
            <div class="txt-title">
                <h1>Send Email</h1>
                <hr />
            </div>
            <form asp-action="email" id="Form"
                  style="margin-left: 30px; margin-right: 15px">
                <div class="txt-field">
                    <label for="CusAdd">Customer Email Address :</label><br />
                    <input type="text"
                           id="CusAdd"
                           name="address"
                           required
                           placeholder="Enter Email Address" />
                </div>
                <div class="txt-field">
                    <label for="CusAdd">Subject Email :</label><br />
                    <input type="text"
                           id="CusAdd"
                           name="subject"
                           required
                           placeholder="Enter Email Subject" />
                </div>


                <label class="textare" for="pass-r" id="label">Message :</label> <br />
                <textarea name="body"
                          placeholder="Enter Email Messages"
                          cols="23"
                          rows="5"></textarea>

                <br />

                <div class="error">
                    <p> @ViewData["Message"]</p>
                </div>
                <div class="btn-group gap-2">
                    <button type="submit" value="Send Email" id="but1" class="btn btn-danger">
                        Send Email
                    </button>

                </div>
            </form>@{
                Layout = "~/Views/Shared/adminhomelayout.cshtml";
            }

            

        </div>
    </div>

</body>

</html>

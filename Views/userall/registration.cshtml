@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
          integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <title>registration</title>
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            background-image: url('../images/ppp.jpg');
            background-size: cover;
            background-position: center;
        }

        .regstbox {
            position: absolute;
            top: 50%;
            left: 50%;
            width: 400px;
            transform: translate(-50%, -50%);
            padding: 30px;
            border-radius: 15px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.7); 
        }

        .blur-background {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5); 
            backdrop-filter: blur(10px); 
            -webkit-backdrop-filter: blur(10px);
            border-radius: 15px;
            z-index: -1; 
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
            color: white;
            text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.7); 
        }

        label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
            color: white;
        }

        input[type="text"],
        input[type="password"],
        input[type="email"],
        input[type="number"],
        input[type="date"] {
            width: 100%;
            padding: 10px;
            border: none;
            border-radius: 5px;
            background-color: #f2f2f2;
            margin-bottom: 15px;
        }

        .error {
            color: red;
        }
    </style>
</head>
<body>

    <div class="regstbox">
        <!-- خلفية مشوشة -->
        <div class="blur-background"></div>

        <form asp-action="registration">
            <h2>Registration here</h2>

            <label id="lb1">Username:</label>
            <input id="uname" type="text" name="name" placeholder="Enter a username" required>

            <label id="lb2" for="password">Password:</label>
            <input id="upass" type="password" name="password" placeholder="Enter a password" required>

            <label id="lb3" for="confirm-password">Confirm Password:</label>
            <input type="password" id="confirm-password" name="confirm-password" placeholder="Re-enter your password" required>

            <p class="error">@ViewData["error"]</p>
            <button class="btn btn-success" type="submit" id="submit-btn">Register</button>
            <label for="check" id="ck1">Login here --> <a asp-action="login">login</a></label>
        </form>
    </div>

    <script>
        document.getElementById("submit-btn").onclick = function () {
            var pass = document.getElementById("upass").value;
            var pass1 = document.getElementById("confirm-password").value;

            var label1 = document.getElementById("lb2");
            var label2 = document.getElementById("lb3");

            if (pass !== pass1) {
                alert("Password does not match");
                label1.style.color = "red";
                label2.style.color = "red";
                event.preventDefault();
            }
        };
    </script>
</body>
</html>
